<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>chatForm</title>
  <!-- <link rel='stylesheet' href='/stylesheets/style.css' /> -->
  <style>
    * {
      box-sizing: border-box;
    }
    .msgLine {
      margin: 15px;
    }
    .msgBox {

      border: 1px solid black;
      background: white;
      padding: 2px 5px;
      border-radius: 10px;
    }
    #chatContent {
      border: 1px solid #000;
      width: 600px;
      height: 400px;
      margin-bottom: 10px;
      overflow-y: auto;
    }
    #myChat {
      width: 400px;
      height: 32px;
      border-radius: 8px;
    }
    #send {
      width: 16%;
      height: 34px;
      border-radius: 50px;
      background: black;
      color: white;
    }
  </style>
</head>

<body>
<script src="/socket.io/socket.io.js"></script>
<h1>프로젝트 채팅방</h1>

<!-- chat contents will be written down below. -->
<div id="chatContent">

</div>
<input id="myChat" type="text">
<input type="submit" id="send" value="전송">
<script src="http://code.jquery.com/jquery-latest.js"></script>
<script>
  var socket = io.connect('http://localhost:3000', {
    path: '/socket.io'
    // transports: ['websocket']
  });

  // receiving a message
  socket.on('msg', function (data) {
    var msgLine = $('<div class="msgLine">');
    var msgBox = $('<div class="msgBox">');
    msgBox.append(data);
    msgBox.css('display', 'inline-block');
    msgLine.append(msgBox);
    $('#chatContent').append(msgLine);
    // auto scroll down when a user send something
    var chatContent = document.getElementById("chatContent");
    chatContent.scrollTop = chatContent.scrollHeight;
  });

  // sending a message
  $("#send").on("click", function () {
    var message = $("#myChat").val().trim();
    if (message !== "") {
      var msgLine = $('<div class="msgLine">');
      var msgBox = $('<div class="msgBox">');
      msgBox.append(message);
      msgBox.css('display', 'inline-block');
      msgLine.css('text-align', 'right');
      msgLine.append(msgBox);
      $('#chatContent').append(msgLine);
      socket.emit('msg', message);
      $("#myChat").val("");
      var chatContent = document.getElementById("chatContent");
      chatContent.scrollTop = chatContent.scrollHeight;
    }
  });
</script>
</body>
</html>